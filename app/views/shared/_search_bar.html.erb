<!-- search_bar partial -->
<!-- Both pressing enter in the bar and selecting the button will perform a search -->

<form action=<%= recipes_path%> method: 'get' do %>

	<%= content_tag :div, class: "span8" do -%>
		<%= text_field_tag :search, @param, {onchange: 'this.form.submit()', id: "search_field", value: "Search"} %>
	<% end -%>
	<%= content_tag :div, class: "span1" do -%>
		<%= btn_icon "icon-search" %>
	<% end -%>
</form>