<!-- search_bar partial -->
<!-- Both pressing enter in the bar and selecting the button will perform a search -->

<form action=<%= recipes_path%> method: 'get' do %>
	<div class="span8">
		<%= text_field_tag :search, @param, {onchange: 'this.form.submit()', id: "search_field"} %>
	</div>
	<div class="span1">
		<%= btn_icon "icon-search" %>
	</form>
</div>