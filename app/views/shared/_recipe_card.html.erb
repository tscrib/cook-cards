<!-- recipe_card partial -->
<!-- The full recipe card to be displayed -->

<%= content_tag :div, class: "hero-unit" do -%>
	<%= content_tag :div, class: "row" do -%>
		<%= content_tag :div, class: "span2", title: "recipe summary" do -%>
			<%= content_tag :div, class: "row" do -%>
				<%= render 'photo', recipe: @recipe %>
				<%= content_tag :br -%>
				<!-- add this line back when servings/time is implemented -->
				<!-- render "shared/time_servings" %-->
			<% end -%>
			<%= content_tag :div, class: "row" do -%>
				<% if signed_in? %>
					<%= render 'shared/added', recipe: @recipe %>
				<% end %>
			<% end -%>
		<% end -%>
		<%= content_tag :div, class: "span4 offset1", title: "content" do -%>
			<%= render 'content', recipe: @recipe %>
		<% end -%>
	<% end -%>
<% end -%>