<!-- user_info partial -->

<!-- Ensure that one user is selected -->
<% @user ||= current_user %>

<%= content_tag :section do %>
	<%= content_tag :h1 do %>
		<%= link_to user_path(@user) do %>
			<%= gravatar_for @user, size: 40 %>
		<% end %>
		<%= @user.name %>
	<% end %>

	<%= content_tag :div, class: "stats" do %>
		
		<%= content_tag :strong, id: "added recipes", class: "stat" do %>
			<%= pluralize(@user.added_recipes.count, 'Recipe') %> 
		<% end %>
	<% end %>

<% end %>

<% if @user == current_user %>
	<%= button_to "Add new Recipe", "/recipes/new", class: "btn", type: "button", method: :get %>
<% end %>
