<!-- recipe partial -->
<!-- This is formatted for displaying in a list -->

<%= content_tag :li do -%>
	<%= content_tag :div, class: "span1" do -%>
		<%= link_to image_tag(recipe.photo_url), recipe %>
		
	<% end %>
	<%= content_tag :div, class: "span5" do -%>

		<%= content_tag :h3, link_to( recipe.title, recipe ) -%>
		<!-- Add this line back when time/servings are implemented -->
		<!-- render "shared/time_servings" %-->

	<% end %>
	<%= content_tag :div, class: "span2" do -%>
		<% if signed_in? %>
    		<%= render 'shared/added', recipe: recipe, return_to:request.url %>
			
			<% if current_user.admin? %>
				<%= btn_icon "icon-remove", 
				"btn btn-danger btn-mini", 
				{ obj: recipe, method: :delete } %>
				<%= btn_icon "icon-pencil", 
				"btn btn-danger btn-mini", 
				{ obj: "recipes/#{recipe.id}/edit", method: :get } %>
			<% end %>
		<% end %>
	<% end %>
<% end %>