<% provide(:title, "All Recipes") %>


<%= content_tag :div, class: "row" do %>
	
	<%= render 'shared/sidebar' %>

	<%= content_tag :div, class: "span9" do %>
		<%= content_tag :h1, "All Recipes" %>

		<%= content_tag :div, class: "row" do %> 
			<%= render 'shared/search_bar', param: params[:search] %>
			<%= render 'shared/add_bar' %>
		<% end %>

		<%= content_tag :ol, class: "recipes" do %>
			<%= render @recipes %>
		<% end %>
		
		<%= will_paginate %>
	<% end %>
<% end %>

